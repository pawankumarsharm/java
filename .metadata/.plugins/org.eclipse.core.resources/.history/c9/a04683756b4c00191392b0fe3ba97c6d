package jspider;

import java.util.Scanner;

public class p25 {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the number");
		int n=sc.nextInt();
		int p=1;
		for(int i=1;i<=n;i++)
		{
			for(int j=1;j<=n-i;j++)
			{
				System.out.print(" ");
			}
				for(int k=1;k<2*i;k++) {
					
				System.out.print(k);
				 System.out.print("*");
				 
				}
			System.out.println();
		}

	}

}
